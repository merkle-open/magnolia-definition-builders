<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
    <name>custom-definition-builders</name>
    <displayName>custom definition builders</displayName>
    <version>${project.version}</version>

    <components>
        <id>main</id>
        <configurer>
            <class>com.merkle.oss.magnolia.definition.custom.configuration.CustomDefinitionBuildersGuiceComponentConfigurer</class>
        </configurer>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.configuration.LocaleProvider</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.configuration.DefaultLocaleProvider</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.configuration.LinkUtil</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.configuration.DefaultLinkUtil</implementation>
        </component>

        <component>
            <type>com.merkle.oss.magnolia.definition.custom.linkset.model.LinkModelFactory</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.linkset.model.LinkModelFactory</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.linkset.model.InternalLinkFactory</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.linkset.model.InternalLinkFactory</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.linkset.model.ExternalLinkFactory</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.linkset.model.ExternalLinkFactory</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.linkset.model.AssetLinkFactory</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.linkset.model.AssetLinkFactory</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.linkset.model.util.LinkQueryParamModifier</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.linkset.model.util.LinkQueryParamModifier</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.linkset.model.util.LinkAnchorModifier</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.linkset.model.util.LinkAnchorModifier</implementation>
        </component>

        <component>
            <type>com.merkle.oss.magnolia.definition.custom.imageset.model.ImageModel$Factory</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.imageset.model.ImageModel$Factory</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.imageset.model.ImageReferenceModel$Factory</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.imageset.model.ImageReferenceModel$Factory</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.colorpicker.model.ColorFactory</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.colorpicker.model.ColorFactory</implementation>
        </component>

        <component>
            <type>com.merkle.oss.magnolia.definition.custom.videoset.model.VideoModel$Factory</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.videoset.model.VideoModel$Factory</implementation>
        </component>
        <component>
            <type>com.merkle.oss.magnolia.definition.custom.videoset.model.VideoReferenceModel$Factory</type>
            <implementation>com.merkle.oss.magnolia.definition.custom.videoset.model.VideoReferenceModel$Factory</implementation>
        </component>
    </components>
</module>
