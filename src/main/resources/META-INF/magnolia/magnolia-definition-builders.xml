<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module SYSTEM "module.dtd" >
<module>
    <name>magnolia-definition-builders</name>
    <displayName>Magnolia Appbuilder</displayName>
    <description>The Definition Builder module is a builder for definitions.</description>
    <class>com.namics.oss.magnolia.appbuilder.AppBuilderModule</class>
    <versionHandler>com.namics.oss.magnolia.appbuilder.setup.AppBuilderModuleVersionHandler</versionHandler>
    <version>${project.version}</version>

    <components>
        <id>admincentral</id>
        <component>
            <type>info.magnolia.ui.framework.ContentClipboard</type>
            <implementation>com.namics.oss.magnolia.appbuilder.dropconstraint.NodeTypeConstraintAwareJcrContentClipboard</implementation>
        </component>
    </components>

    <dependencies>
        <dependency>
            <name>core</name>
            <version>*</version>
        </dependency>
        <dependency>
            <name>rendering</name>
            <version>*</version>
            <optional>true</optional>
        </dependency>
        <dependency>
            <name>ui-contentapp</name>
            <version>*</version>
        </dependency>
    </dependencies>
</module>
